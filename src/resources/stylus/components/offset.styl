.global
    padding-bottom 1px
    margin-bottom 12px
.wrap
    position relative
    min-height 100%;    
.main-container
    position relative
    min-height 100%
    padding-left 0
    transition padding-left 0.6s 
    &.is-offset-active
        padding-left 13rem
        transition padding-left 0.6s 

.offset-container
    min-height 100%
    padding-bottom 1px
    position absolute
    box-shadow 2px 2px 5px -3px $grey;
    top 0
    left -12.9rem
    transition left 0.6s 
    background $primary
    border-right 1px solid hsla($grey,20%)
    border-left 4px solid darken($primary,20%)
    width 13rem
    &.is-active
        left 0
        transition left 0.6s 
    .offset
        padding 1.3rem 1rem 1rem 1rem
        color $white
    .delete
        position absolute
        top 0.5rem
        right 0.5rem
ul.offset-list
    margin  -1px -1rem 0 -1rem
    border-bottom 1px solid lighten($primary , 8%)
    border-top 1px solid darken($primary , 8%)
    font-size $size-7
    li
        border-top 1px solid lighten($primary , 8%)
        border-bottom 1px solid darken($primary , 8%)
        > ul
            margin 0
            background hsla($black, 10%)
            border-top 1px solid darken($primary , 16%)
            > li
                border-bottom 1px solid darken($primary , 16%)
                border-top 1px solid lighten($primary , 2%)
                &:first-child
                    border-top 0    
                &:last-child
                    border-bottom 0
                a
                    padding 0.4rem 0 0.4rem 1.4rem

    a
        color lighten($primary , 99%)
        display block
        padding 0.6rem 0 0.6rem 1rem
        &:hover
        &:focus
            color lighten($primary , 96%)
            background hsla($white , 10%)

.offset-container
    .offset-toggle
        background $primary
        position absolute
        top 2.95rem
        right -3.24rem 
        border solid hsla($grey,20%)
        border-width 1px 1px 1px 0 
        border-radius 0rem .1rem .6rem 0rem
        box-shadow 2px 2px 4px -3px $grey;
        .burger
            hamburger($navbar-height)
            span
                background-color $white
            &:hover
                background hsla($white , 10%)
            &.is-active
                span
                    background-color $white
                    height 2px;
    &.local
        .toggle
            top 5.9rem
    .offset-item
        color $white
        margin  0 -1rem
        border-top 1px solid lighten($primary , 8%)
        border-bottom 1px solid darken($primary , 8%)
        .label
           color $white
           font-size $size-7
        .title
            color $white
            background hsla($white , 10%)
            margin 0
            padding 0.6rem
        .toggle
            :&.is-active
               background $primary 